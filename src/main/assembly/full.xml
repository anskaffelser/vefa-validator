<assembly>
    <id>full</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/assembly/full</directory>
            <outputDirectory>vefa-validator</outputDirectory>
            <excludes>
                <exclude>*/**/.gitkeep</exclude>
                <exclude>*/**/.gitignore</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>vefa-validator/lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>vefa-validator/lib</outputDirectory>
            <scope>provided</scope>
            <includes>
                <include>ch.qos.logback:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>